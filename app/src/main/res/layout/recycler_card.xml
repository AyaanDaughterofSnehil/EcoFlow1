<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    android:backgroundTint="@color/white"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recycle_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/recycle2"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/recycle_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rainwater Harvesting"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textColor="@color/head_theme"
            android:fontFamily="@font/suse_head"/>

        <TextView
            android:id="@+id/recycle_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#66000000"
            android:textSize="15sp"
            android:layout_marginTop="3dp"
            android:text="Harness nature's gift - Store rainwater for future use."/>

    </LinearLayout>

</androidx.cardview.widget.CardView>